{
  "name": "Time_Warp IDE",
  "version": "1.2.0",
  "platform": "macOS",
  "build_date": "2024-10-11",
  "minimum_macos_version": "10.13.0",
  "bundle_identifier": "org.time-warp-ide.Time_Warp",
  "architecture": "universal2",
  "features": {
    "multi_language_support": true,
    "languages": ["PILOT", "BASIC", "Logo", "Python", "JavaScript"],
    "graphics_engine": "turtle_enhanced",
    "multi_tab_editor": true,
    "syntax_highlighting": true,
    "code_completion": true,
    "error_handling": "enhanced",
    "theme_system": true,
    "plugin_system": true,
    "tutorial_system": true,
    "gamification": true,
    "ai_assistant": true
  },
  "macos_specific": {
    "app_bundle": true,
    "code_signing": "optional",
    "notarization": "optional",
    "file_associations": [
      {
        "extension": ".pilot",
        "description": "PILOT Program",
        "icon": "pilot_document.icns"
      },
      {
        "extension": ".bas",
        "description": "BASIC Program", 
        "icon": "basic_document.icns"
      },
      {
        "extension": ".logo",
        "description": "Logo Program",
        "icon": "logo_document.icns"
      }
    ],
    "dock_integration": true,
    "menubar_integration": true,
    "notification_center": true,
    "spotlight_indexing": true
  },
  "system_requirements": {
    "minimum_ram": "4GB",
    "recommended_ram": "8GB",
    "disk_space": "100MB",
    "python_version": "3.9+",
    "graphics": "Metal support recommended"
  },
  "build_configuration": {
    "compiler": "PyInstaller",
    "optimization_level": "2",
    "debug_symbols": false,
    "compression": true,
    "one_file": false,
    "console": false
  }
}